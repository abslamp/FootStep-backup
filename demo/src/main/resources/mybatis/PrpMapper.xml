<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="demo.domain.PrpMapper">

    <select id="findById" parameterType="long" resultType="demo.domain.Prp">
        SELECT * FROM PRP WHERE ID=#{id}
    </select>

    <select id="find" resultType="demo.domain.Prp">
        SELECT * FROM PRP
        <if test="cond!=null">
            <where>
                <if test="cond.name!=null and cond.name!=''">
                    AND NAME=#{cond.name}
                </if>
                <if test="cond.abbr!=null and cond.abbr!=''">
                    AND ABBR=#{cond.name}
                </if>
            </where>
        </if>

    </select>

    <select id="getCount" parameterType="demo.domain.Prp" resultType="int">
        SELECT COUNT(*) FROM PRP
            <where>
                <if test="name!=null and name!=''">
                    AND NAME=#{cond.name}
                </if>
                <if test="abbr!=null and abbr!=''">
                    AND ABBR=#{cond.name}
                </if>
            </where>
    </select>

    <insert id="insert">
        INSERT INTO PRP(NAME,ABBR,REMARK) VALUES (#{name},#{abbr},#{remark})
    </insert>

    <update id="update">
        UPDATE PRP SET (NAME=#{prp.name}, ABBR=#{prp.abbr}, REMARK=#{prp.remark}) WHERE ID=#{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM PRP WHERE ID=#{id}
    </delete>

</mapper>
